<% content_for :title, t("activerecord.models.status_page") %>

<div class="row">
  <div class="col-8">
    <h1 class="h3"><%= t("activerecord.models.status_page") %></h1>
  </div>
  <div class="col-4 d-flex justify-content-end">
    <%= link_to t("navigation.create"),
                new_status_page_path,
                class: "btn btn-outline-primary"
    %>
  </div>
</div>

<div class="card shadow mt-3">
  <div class="card-body mx-3">
    <div class="row py-2">
      <div class="col-4 mt-auto">
        <%= StatusPage.human_attribute_name(:name) %>
      </div>
      <div class="col-4 mt-auto">
        <%= StatusPage.human_attribute_name(:url) %>
      </div>
      <div class="col-4 d-flex justify-content-end">
        &nbsp;
      </div>
    </div>
    <% @status_pages.each do |status_page| %>
      <%= render status_page %>
    <% end %>
  </div>
</div>
