<h2 class="mb-4"><%= t(".sign_in") %></h2>

<%= bootstrap_form_with(scope: resource_name, url: session_path(resource_name)) do |f| %>
  <%= render 'layouts/flash' %>
  <%= f.email_field :email, autofocus: true, label: t("activerecord.attributes.user.email"), required: false, floating: true %>
  <%= f.password_field :password, label: t("activerecord.attributes.user.password"), required: false, floating: true %>
  <%= f.check_box :remember_me, label: t("devise.sessions.new.remember_me", default: "サインイン状態を保持する") %>
  <%= f.submit t('.sign_in'), class: "btn btn-primary" %>
<% end %>

<%= render "devise/shared/links" %>
