<h2 class="mb-4"><%= t("devise.passwords.edit.title", default: "パスワードを変更") %></h2>

<%= bootstrap_form_with(model: resource, as: resource_name, url: password_path(resource_name), method: :put) do |f| %>
  <%= render 'layouts/flash' %>
  <%= f.hidden_field :reset_password_token %>
  <%= f.password_field :password, autofocus: true, label: t("activerecord.attributes.user.password"), required: false, floating: true %>
  <%= f.password_field :password_confirmation, label: t("activerecord.attributes.user.password_confirmation"), required: false, floating: true %>
  <%= f.submit t("devise.passwords.edit.submit", default: "パスワードを更新"), class: "btn btn-primary" %>
<% end %>

<%= render "devise/shared/links" %>
