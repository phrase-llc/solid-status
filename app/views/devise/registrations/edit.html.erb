<h2 class="mb-4"><%= t("devise.registrations.edit.title", default: "アカウント情報を編集") %></h2>

<%= bootstrap_form_with(model: resource, as: resource_name, url: registration_path(resource_name), method: :put) do |f| %>
  <%= render 'layouts/flash' %>
  <%= f.email_field :email, autofocus: true, label: t("activerecord.attributes.user.email") %>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <hr>
  <h4 class="mb-3"><%= t("devise.registrations.edit.change_password", default: "パスワードを変更する場合") %></h4>
  <% if @minimum_password_length %>
    <% password_length = t("devise.shared.minimum_password_length", count: @minimum_password_length) %>
  <% end %>
  <%= f.password_field :password, label: t("activerecord.attributes.user.password"), help: password_length %>


  <%= f.password_field :password_confirmation, label: t("activerecord.attributes.user.password_confirmation") %>

  <%= f.password_field :current_password, label: t("devise.registrations.edit.current_password", default: "現在のパスワード"), required: true %>

  <%= f.submit t("devise.registrations.edit.update", default: "更新する"), class: "btn btn-primary" %>
<% end %>

<hr>

<h4 class="mt-5"><%= t("devise.registrations.edit.cancel_account", default: "アカウントを削除する") %></h4>

<p class="text-muted"><%= t("devise.registrations.edit.cancel_warning", default: "アカウントを削除すると、すべてのデータが完全に消去されます。") %></p>

<%= button_to t("devise.registrations.edit.cancel_account_button", default: "アカウント削除"), registration_path(resource_name), method: :delete, data: { confirm: t("devise.registrations.edit.cancel_confirm", default: "本当に削除しますか？") }, class: "btn btn-outline-danger" %>
